generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User{
  id      String  @map("_id") @id @default(auto())  @db.ObjectId
  name     String  
  email    String  @unique
  password String
  token String?
  Events Event[]
}

model Event{
  id      String  @map("_id") @id @default(auto()) @db.ObjectId
  name     String  
  description    String  
  date    String  
  creator User @relation(fields: [creatorId], references: [id])
  creatorId String @db.ObjectId
}